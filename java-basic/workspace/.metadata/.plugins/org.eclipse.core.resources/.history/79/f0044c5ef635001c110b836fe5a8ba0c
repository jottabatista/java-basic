import java.util.Scanner;

public class WorkingWithVariables {

	public static void main(String[] args) {
		// Tipos possiveis de variaveis:
		// int (Integer) = Numeros inteiros = 1, 2, 3, 4
		// float (double) = Numeros quebrados = 1.5, 2.3, 3.4
		// String = "Guilherme gosta de estudar programação"
		// Char = 'C'
		// Boolean = true/false
		
		int variavelInteiraA = 1;
		int variavelInteiraB = 1;
		int resultadoDaSomaDasVariaveisInteiras = variavelInteiraA + variavelInteiraB;
		
		//System.out.println(resultadoDaSomaDasVariaveisInteiras);
		
		//String resultadoDaSomaEh = "O resultado da soma é: ";
		//System.out.println(resultadoDaSomaEh + resultadoDaSomaDasVariaveisInteiras);
		
		//System.out.println("O resultado da soma é: " + resultadoDaSomaDasVariaveisInteiras);
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("Escreva seu primeiro nome: ");
		String nome = scanner.next();
		
		System.out.println("Escreva seu sobrenome: ");
		String sobrenome = scanner.next();
		
		//System.out.println(nome);
		//System.out.println(sobrenome);
		
		
		//Juca Palido
		//                    Eliel        Silva
		String nomeCompleto = nome + " " + sobrenome;
		
		System.out.println("Nome Completo");
		System.out.println(nomeCompleto);
	}

}
