
public class WorkingWithVariables {

	public static void main(String[] args) {
		// Tipos possiveis de variaveis:
		// int (Integer) = Numeros inteiros = 1, 2, 3, 4
		// float (double) = Numeros quebrados = 1.5, 2.3, 3.4
		// String = "Guilherme gosta de estudar programação"
		// Char = 'C'
		// Boolean = true/false
		
		int variavelInteiraA = 1;
		int variavelInteiraB = 1;
		int resultadoDaSomaDasVariaveisInteiras = variavelInteiraA + variavelInteiraB;
		
		System.out.println(resultadoDaSomaDasVariaveisInteiras);
		
		String resultadoDaSomaEh = "O resultado da soma é: ";
		System.out.println(resultadoDaSomaEh + resultadoDaSomaDasVariaveisInteiras);
		
		StringBuilder stringBuilder = new StringBuilder();
		String string = stringBuilder.append(resultadoDaSomaEh).append(resultadoDaSomaDasVariaveisInteiras).toString();
		System.out.println(string);
		String format = String.format("%s%d", resultadoDaSomaEh, resultadoDaSomaDasVariaveisInteiras);
		System.out.println(format);
	}

}
